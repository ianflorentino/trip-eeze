<div class="homepage">
  <%= video_tag('travel.webm', id: 'videobcg', autoplay: "true", loop: "true")%> 
  <div class="main-heading">
    <h1 id="main-title">Trip-eeze</h1>
    <p id="main-desc">trips made easier..</p>
    <!-- Button trigger modal -->
    <button class="btn btn-primary btn-lg register-btn" data-toggle="modal" data-target="#myModal">
     Register
    </button>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Register</h4>
        </div>
        <div class="modal-body">
          <%= form_for @user, :url => { :controller => "users", :action => "create" }, html: { multipart: true } do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :avatar %>
            <%= f.file_field :avatar %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control"  %>
          </div>
        </div>
        <div class="modal-footer">
            <%= f.submit "Register", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</div>
