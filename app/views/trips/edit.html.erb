<div class="well container">
  <h1>Edit <%= @trip.name %></h1>
  <%= form_for @trip do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, id: "edit-trip", class: "form-control" %>
  </div>
    <%= f.submit "Edit Trip" %>
  <% end %> 
</div>
